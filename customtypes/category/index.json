{
    "id": "category",
    "label": "Category",
    "format": "page",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": {
                "type": "UID",
                "config": {
                    "label": "Slug",
                    "placeholder": "category-slug"
                }
            },
            "name": {
                "type": "Text",
                "config": {
                    "label": "Name",
                    "placeholder": "Category name (e.g., Basketball, Soccer)"
                }
            },
            "icon": {
                "type": "Image",
                "config": {
                    "label": "Icon",
                    "constraint": {
                        "width": 200,
                        "height": 200
                    },
                    "thumbnails": [
                        {
                            "name": "thumbnail",
                            "width": 64,
                            "height": 64
                        }
                    ]
                }
            }
        },
        "SEO & Metadata": {
            "meta_title": {
                "type": "Text",
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the category used for social media and search engines"
                }
            },
            "meta_description": {
                "type": "Text",
                "config": {
                    "label": "Meta Description",
                    "placeholder": "A brief summary of the category"
                }
            },
            "meta_image": {
                "type": "Image",
                "config": {
                    "label": "Meta Image",
                    "constraint": {
                        "width": 2400,
                        "height": 1260
                    },
                    "thumbnails": []
                }
            }
        }
    }
}